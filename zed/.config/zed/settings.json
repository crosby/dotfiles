{
    "agent_servers": {
        "codex": {
            "default_mode": "auto"
        }
    },
    "agent": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4-5"
        },
        "use_modifier_to_send": true,
        "expand_edit_card": false,
        "enable_feedback": false,
        "always_allow_tool_actions": true,
        "model_parameters": []
    },
    "buffer_font_family": "Gintronic",
    "edit_predictions": {
        "mode": "subtle"
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "language_models": {},
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "ui_font_size": 14,
    "buffer_line_height": "comfortable",
    "buffer_font_size": 13,
    "terminal": {
        "font_size": 12,
        "line_height": "comfortable"
    },
    "theme": {
        "mode": "dark",
        "dark": "Gruvbox Light",
        "light": "Solarized Light"
    },
    "lsp": {
        "deno": {
            "settings": {
                "deno": {
                    "enable": true
                }
            }
        }
    },
    "languages": {
        "JavaScript": {
            "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
            "formatter": "language_server"
        },
        "TypeScript": {
            "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
            "formatter": "language_server"
        },
        "TSX": {
            "language_servers": ["deno", "!typescript-language-server", "!vtsls", "!eslint"],
            "formatter": "language_server"
        },
        "Markdown": {
            "soft_wrap": "preferred_line_length",
            "remove_trailing_whitespace_on_save": false
        }
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "file_icons": true,
        "git_status": false,
        "show_diagnostics": "errors"
    },
    "indent_guides": {
        "enabled": true
    },
    "centered_layout": {
        "left_padding": 0.15,
        "right_padding": 0.15
    },
    "project_panel": {
        "indent_size": 16,
        "git_status": true,
        "button": true
    },
    "inlay_hints": {
        "enabled": true
    },
    "file_types": {
        "Dockerfile": ["Dockerfile", "Dockerfile.*"],
        "JSON": ["json", "jsonc", "*.code-snippets"]
    },
    "preferred_line_length": 160,
    "tab_size": 4,
    "scrollbar": {
        "show": "never"
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        // above is default from Zed
        "**/out",
        "**/dist",
        "**/.husky",
        "**/.turbo",
        "**/.vscode-test",
        "**/.vscode",
        "**/.next",
        "**/.storybook",
        "**/.tap",
        "**/.nyc_output",
        "**/report",
        "**/node_modules"
    ],
    "gutter": {
        "line_numbers": true,
        "folds": false,
        "breakpoints": false,
        "runnables": false,
        "min_line_number_digits": 0
    },
    "context_servers": {
        "Context7": {
            "source": "custom",
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp", "--api-key", "YOUR_API_KEY"]
        }
    }
}
